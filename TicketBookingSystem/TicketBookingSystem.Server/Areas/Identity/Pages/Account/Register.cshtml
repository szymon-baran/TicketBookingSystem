@page
@using TicketBookingSystem.Shared.Dictionaries
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="row justify-content-center">
    <div class="col-6 mt-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Rejestracja</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-4 form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mt-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mt-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mt-3">
                <input asp-for="Input.Age" class="form-control" autocomplete="age" aria-required="true" />
                <label asp-for="Input.Age"></label>
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>
            <div class="form-floating mt-3">
                <select asp-for="Input.FavouriteMusicGenre" class="form-control" autocomplete="music-genre" aria-required="true" asp-items="@(new SelectList(Enum.GetValues(typeof(MusicGenre)).Cast<MusicGenre>()))">
                    <option>Wybierz gatunek...</option>
                </select>
                <label asp-for="Input.FavouriteMusicGenre"></label>
                <span asp-validation-for="Input.FavouriteMusicGenre" class="text-danger"></span>
            </div>
            <div class="row my-2">
                <button id="registerSubmit" type="submit" class="mt-2 w-100 btn btn-lg btn-primary">Zarejestruj się</button>
            </div>
        </form>
        <p>
            Posiadasz już konto? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="link-secondary">Zaloguj się</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
